{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "POST User",
  "anyOf": [
    { "required": [
      "name"
    ]},
    { "required": [
      "password"
    ]},
    { "required": [
      "email"
    ]}
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The Name Schema",
      "default": "",
      "examples": [
        "Kyle"
      ],
      "pattern": ".{1,}"
    },
    "password": {
      "$id": "#/properties/password",
      "type": "string",
      "title": "The Password Schema",
      "default": "",
      "examples": [
        "pw"
      ],
      "pattern": ".{1,}"
    },
    "email": {
      "$id": "#/properties/email",
      "type": "string",
      "title": "The Email Schema",
      "default": "",
      "examples": [
        "kyle@x.com"
      ],
      "pattern": "\b[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}\b"
    }
  }
}